{% include app.crud.getTemplate('template', 'fieldLabel', crudEntity) with {
    field: field,
    definition: crudData.getDefinition(),
    annotations: annotations
} only %}
<input type="file" class="form-control" id="{{ field }}" name="{{ fieldNamePrefix ~ field }}" />
{% if value %}
    <p class="help-block">{{ value }}</p>
{% endif %}
