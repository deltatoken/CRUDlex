<script src="{{ crud.generateURL('crudStatic', {file: 'js/vendor/bootstrap/bootstrap.min.js'}) }}"></script>
<script type="text/javascript" src="{{ crud.generateURL('crudStatic', {file: 'js/vendor/select2/select2.full.min.js'}) }}"></script>
<script type="text/javascript" src="{{ crud.generateURL('crudStatic', {file: 'js/vendor/flatpickr/flatpickr.min.js'}) }}"></script>
<script type="text/javascript" src="{{ crud.generateURL('crudStatic', {file: 'js/vendor/quill/quill.min.js'}) }}"></script>
<script type="text/javascript">
    flatpickr('.crudDate', {
        dateFormat: 'Y-m-d'
    });
    flatpickr('.crudDateTime', {
        dateFormat: 'Y-m-d H:i',
        enableTime: true,
        time_24hr: true
    });
    $('.tooltip-crudlex').tooltip({'placement': 'auto'});
    $('.many-crudlex').select2({
    {% if crud.isManageI18n() %}
        'language': '{{ crudlex_sessionGet('locale', 'en') }}',
    {% endif %}
        theme: 'bootstrap',
        tags: true,
        allowClear: true
    });
</script>
